<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="35dp"
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="result:"/>

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/btn_bindService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bindService"
        app:layout_constraintTop_toBottomOf="@id/tv_result"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/btn_unbindService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unbindService"
        app:layout_constraintTop_toBottomOf="@id/btn_bindService"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/btn_startService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startService"
        app:layout_constraintTop_toBottomOf="@id/btn_unbindService"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/btn_stopService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stopService"
        app:layout_constraintTop_toBottomOf="@id/btn_startService"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/btn_getNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getNumber"
        app:layout_constraintTop_toBottomOf="@id/btn_stopService"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>