<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.xbing.app.component.ui.customview.testcustom.LineTextView
        android:id="@+id/ltv_above"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:text="testtesttestestest"
        android:background="#00ff00"
        />

    <com.xbing.app.component.ui.customview.testcustom.HorizontalView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ltv_above"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/color_333333">

        <View
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="#FFFF00"/>

        <View
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="#00FFff"/>

    </com.xbing.app.component.ui.customview.testcustom.HorizontalView>
</androidx.constraintlayout.widget.ConstraintLayout>